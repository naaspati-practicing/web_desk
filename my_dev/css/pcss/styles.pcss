@reset-global pc;

*,
*:before,
*:after {
  box-sizing: border-box;
}

img {
  display: block;
}

#gallery {
  position: relative;
  z-index: 2;
  padding: 10px;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  transition: all 0.5s ease-in-out;
  transform: translateZ(0);

  &.pop {
    filter: blur(10px);
  }

  figure {
    flex-basis: 33.33%;
    padding: 10px;
    overflow: hidden;
    cursor: pointer;

    img {
      width: 100%;
      transition: all 0.3s ease-in-out;
    }

    figcaption {
      display: none;
    }
  }
}

#popup {
  position: fixed;
  z-index: 2;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: white;
  opacity: 0;
  transition: opacity .5s ease-in-out .2s;
  @util center;

  &.show {
    opacity: 1;
  transition: opacity .2s ease-in-out 0s;
  }

  figure {
    width: 50%;
    background-color: red;
    
    img {
      width: 100%;
    }
    figcaption {
      display: none;
    }
  }
}

