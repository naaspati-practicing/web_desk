@reset-global pc;

*,
*:before,
*:after {
  box-sizing: border-box;
}

img {
  display: block;
}

#gallery {
  position: relative;
  z-index: 2;
  padding: 10px;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  transition: all 0.5s ease-in-out;
  transform: translateZ(0);

  &.pop {
    filter: blur(10px);
  }

  figure {
    flex-basis: 33.33%;
    padding: 10px;
    overflow: hidden;
    cursor: pointer;

    img {
      width: 100%;
      transition: all 0.3s ease-in-out;
    }

    figcaption {
      display: none;
    }
  }
}

#popup {
  position: fixed;
  z-index: 2;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background-color: white;
  opacity: 0;
  transition: opacity 0.5s ease-in-out 0.2s;

  &.show {
    opacity: 1;
    transition: opacity 0.2s ease-in-out 0s;
  }

  figure {
    width: 50%;
    background-color: red;
    box-shadow: -4px 27px 43px -15px rgba(0, 0, 0, 0.83);
    @util center;

    img {
      width: 100%;
    }
    figcaption {
      position: absolute;
      bottom: 0;
      width: 100%;
      background: linear-gradient(
        180deg,
        rgba(0, 0, 0, 0),
        rgba(0, 0, 0, 0.78)
      );
      color: white;
      padding: 100px 20px 20px 20px;
      font-family: "Open Sans", sans-serif;
      font-size: 32px;

      small {
        font-size: 11px;
        display: block;
        text-transform: uppercase;
        margin-top: 12px;
        text-indent: 3px;
        opacity: 0.7;
        letter-spacing: 1px;

      }
    }

    div {
      position: absolute;
      top: 0;
      right: 0;
      margin: 1%;
      margin-top: 2%;
      background-image: url('../imgs/error.png');
      width: 5%;
      height: 6%;
      background-size: contain;
      background-repeat: no-repeat;
      z-index: 2;
      background-color: transparent;
      border: 0;
    }
  }
}
