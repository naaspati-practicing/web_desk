mixin carousel-indicators(id, size)
 ol.carousel-indicators
  each v,i in Array(size)
   li(data-target="#"+id, data-slide-to=v, class=i==0 ? "active" : undefined)


mixin carousel-control(id)
 a.carousel-control-prev(href="#"+id, role="button", data-slide="prev")
  span.carousel-control-prev-icon(aria-hidden="true")
  span.sr-only Previous
 a.carousel-control-next(href="#"+id, role="button", data-slide="next")
  span.carousel-control-next-icon(aria-hidden="true")
  span.sr-only Next
 
    
